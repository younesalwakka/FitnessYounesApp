@model FitnessYounesApp.Models.AntrenorMusaitlik

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Antrenor Musaitlik</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- اختيار الانترنور بالاسم وليس بالرقم -->
            <div class="form-group">
                <label asp-for="AntrenorId" class="control-label"></label>
                <select asp-for="AntrenorId" class="form-control" asp-items="ViewBag.AntrenorId"></select>
                <span asp-validation-for="AntrenorId" class="text-danger"></span>
            </div>

            <!-- اختيار اليوم من enum DayOfWeek -->
            <div class="form-group">
                <label asp-for="Gun" class="control-label"></label>
                <select asp-for="Gun"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<System.DayOfWeek>()"></select>
                <span asp-validation-for="Gun" class="text-danger"></span>
            </div>

            <!-- وقت البداية -->
            <div class="form-group">
                <label asp-for="BaslangicSaati" class="control-label"></label>
                <input asp-for="BaslangicSaati" class="form-control" type="time" />
                <span asp-validation-for="BaslangicSaati" class="text-danger"></span>
            </div>

            <!-- وقت النهاية -->
            <div class="form-group">
                <label asp-for="BitisSaati" class="control-label"></label>
                <input asp-for="BitisSaati" class="form-control" type="time" />
                <span asp-validation-for="BitisSaati" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

