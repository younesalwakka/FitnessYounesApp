@model FitnessYounesApp.Controllers.DashboardViewModel
@using FitnessYounesApp.Models

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <h1 class="mb-4">Admin Dashboard</h1>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Toplam Spor Salonu</h5>
                    <h2>@Model.ToplamSporSalonu</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Toplam Antrenör</h5>
                    <h2>@Model.ToplamAntrenor</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Toplam Üye</h5>
                    <h2>@Model.ToplamUye</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Toplam Randevu</h5>
                    <h2>@Model.ToplamRandevu</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- More Stats -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5>Bekleyen Randevular</h5>
                    <h2>@Model.BekleyenRandevular</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5>Onaylanan Randevular</h5>
                    <h2>@Model.OnaylananRandevular</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-secondary">
                <div class="card-body">
                    <h5>Toplam Hizmet</h5>
                    <h2>@Model.ToplamHizmet</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5>Bu Ay Randevular</h5>
                    <h2>@Model.BuAyRandevular</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Appointments -->
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Son Randevular</h5>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Üye</th>
                                <th>Antrenör</th>
                                <th>Hizmet</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var randevu in Model.SonRandevular)
                            {
                                <tr>
                                    <td>@randevu.UyeProfil?.AdSoyad</td>
                                    <td>@randevu.Antrenor?.AdSoyad</td>
                                    <td>@randevu.Hizmet?.Ad</td>
                                    <td>@randevu.Baslangic.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <form asp-action="UpdateDurum"
                                              asp-controller="Dashboard"
                                              method="post"
                                              class="d-flex gap-2">
                                            @Html.AntiForgeryToken()

                                            <input type="hidden" name="randevuId" value="@randevu.Id" />

                                            <select name="durum" class="form-select form-select-sm">
                                                <option value="0" selected="@(randevu.Durum == RandevuDurumu.Beklemede)">Beklemede</option>
                                                <option value="1" selected="@(randevu.Durum == RandevuDurumu.Onaylandi)">Onaylandi</option>
                                                <option value="2" selected="@(randevu.Durum == RandevuDurumu.Reddedildi)">Reddedildi</option>
                                                <option value="3" selected="@(randevu.Durum == RandevuDurumu.IptalEdildi)">IptalEdildi</option>
                                            </select>

                                            <button type="submit" class="btn btn-sm btn-primary">
                                                Kaydet
                                            </button>
                                        </form>

                                        <div class="mt-1">
                                            <span class="badge bg-@(randevu.Durum == RandevuDurumu.Onaylandi ? "success"
                                                : randevu.Durum == RandevuDurumu.Beklemede ? "warning"
                                                : "danger")">
                                                @randevu.Durum
                                            </span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (TempData["DurumMessage"] != null)
                    {
                        <div class="alert alert-success mt-3">
                            @TempData["DurumMessage"]
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Popular Trainers -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Popüler Antrenörler</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var a in Model.PopulerAntrenorler)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                @a.AntrenorAdi
                                <span class="badge bg-primary">@a.RandevuSayisi</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
