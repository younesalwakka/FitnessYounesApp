@model FitnessYounesApp.Models.UyeProfil

@{
    ViewData["Title"] = "Profilim";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">

            <h3 class="mb-3">Profil Bilgilerim</h3>
            <hr />

            <dl class="row">
                <dt class="col-sm-4">Ad Soyad</dt>
                <dd class="col-sm-8">@Model.AdSoyad</dd>

                <dt class="col-sm-4">Doğum Tarihi</dt>
                <dd class="col-sm-8">
                    @(Model.DogumTarihi?.ToString("dd.MM.yyyy") ?? "-")
                </dd>

                <dt class="col-sm-4">Boy (cm)</dt>
                <dd class="col-sm-8">
                    @(Model.BoyCm?.ToString() ?? "-")
                </dd>

                <dt class="col-sm-4">Kilo (kg)</dt>
                <dd class="col-sm-8">
                    @(Model.KiloKg?.ToString() ?? "-")
                </dd>

                <dt class="col-sm-4">Cinsiyet</dt>
                <dd class="col-sm-8">
                    @(Model.Cinsiyet ?? "-")
                </dd>
            </dl>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    Profili Düzenle
                </a>

                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                    Ana Sayfa
                </a>
            </div>

        </div>
    </div>
</div>
