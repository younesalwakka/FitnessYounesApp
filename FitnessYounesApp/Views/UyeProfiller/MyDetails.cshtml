@model FitnessYounesApp.Models.UyeProfil

@{
    ViewData["Title"] = "Profilim";
}

<h2>Profil Bilgilerim</h2>
<hr />

<dl class="row">
    <dt class="col-sm-3">Ad Soyad</dt>
    <dd class="col-sm-9">@Model.AdSoyad</dd>

    <dt class="col-sm-3">Doğum Tarihi</dt>
    <dd class="col-sm-9">@Model.DogumTarihi?.ToString("dd.MM.yyyy")</dd>

    <dt class="col-sm-3">Boy (cm)</dt>
    <dd class="col-sm-9">@Model.BoyCm</dd>

    <dt class="col-sm-3">Kilo (kg)</dt>
    <dd class="col-sm-9">@Model.KiloKg</dd>

    <dt class="col-sm-3">Cinsiyet</dt>
    <dd class="col-sm-9">@Model.Cinsiyet</dd>
</dl>

<div class="mt-3">
    <a asp-action="MyEdit" class="btn btn-primary">
        Profili Düzenle
    </a>
</div>
